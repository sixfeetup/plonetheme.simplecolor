<?xml version="1.0"?>
<object name="portal_skins" allow_any="False" cookie_persistence="False"
   default_skin="Simplecolor">
 <object name="plonetheme_simplecolor_custom_images"
    meta_type="Filesystem Directory View"
    directory="plonetheme.simplecolor:skins/plonetheme_simplecolor_custom_images"/>
 <object name="plonetheme_simplecolor_custom_templates"
    meta_type="Filesystem Directory View"
    directory="plonetheme.simplecolor:skins/plonetheme_simplecolor_custom_templates"/>
 <object name="plonetheme_simplecolor_styles"
    meta_type="Filesystem Directory View"
    directory="plonetheme.simplecolor:skins/plonetheme_simplecolor_styles"/>
 <object name="plonejquery"
    meta_type="Filesystem Directory View"
    directory="plonetheme.simplecolor:skins/plonejquery"/>
 <object name="course_styles"
    meta_type="Filesystem Directory View"
    directory="plonetheme.simplecolor:skins/course_styles"/>

 <skin-path name="Simplecolor" based-on="Sunburst Theme">
  <layer name="plonetheme_simplecolor_custom_images"
     insert-after="custom"/>
  <layer name="plonetheme_simplecolor_custom_templates"
     insert-after="plonetheme_simplecolor_custom_images"/>
  <layer name="plonetheme_simplecolor_styles"
     insert-after="plonetheme_simplecolor_custom_templates"/>
  <layer name="plonejquery"
     insert-after="plonetheme_simplecolor_styles"/>
  <layer name="course_styles"
     insert-after="custom"/>
 </skin-path>

</object>
