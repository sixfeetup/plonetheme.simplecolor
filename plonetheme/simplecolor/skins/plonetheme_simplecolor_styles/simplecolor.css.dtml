     width:180px;
}

/*STYLES FOR CUSTOM FUNCTIONS*/
.template-coursetitle_view  .documentFirstHeading{
	color:#867A68;
	font-weight:600;
	font-size:180%;
}


/*BLOCK DOCUMENT AUTHOR*/
#content #plone-document-byline{
	display:none;
	}


/*SHOW DOCUMENT AUTHOR FOR COMMENTING*/
.comment .documentByLine{
	display:block;
	}
.comment .documentAuthor{
	display:block;
	}


/*Question/Answer Show/Hide Divs*/
.question{
    background:#F4F4E5;
	padding:6px;
	border:1px solid #331D00;
	margin:5px 0px;
	-moz-border-radius: 5px;
	-webkit-border-radius: 5px;
	border-radius:5px;
	}
			
.answer{
	background:#EEF5EC;
	padding:6px;
	border:1px solid #003300;
	margin:5px 0px;
	-moz-border-radius: 5px;
	-webkit-border-radius: 5px;
	border-radius:5px;
	}
	
.showAnswer{
	width:130px;
    cursor:pointer;
    margin-top:3px;
	}
	
/* SIMPLE SLIDESHOW */
.slideshow{
    padding:10px;
    border:1px solid #000000;
    background-color:#000000;
    color:#FFF;
	-moz-border-radius: 5px;
	-webkit-border-radius: 5px;
	}
			
.slideshow a{
	color:#FFF;
	cursor:pointer;
	}
				
.slideshowheading{
	text-align:left;
	margin:0px;
    color:#FFF;
	}

.imagelinks{
    margin-bottom:5px;
    }
     
.captiondiv{
	position:relative;
	z-index:10;
	margin-top:-1em;
	background-color:#000;
	opacity:.8;
	color:#FFF;
	}
	
/*HIDE CONTENTWELL PORTLET ADMIN OPTIONS*/
.managePortletsAboveLink, .managePortletsBelowLink, .manageFooterPortletsLink, .manageInHeaderPortletsLink, .managePortletsBelowTitleLink {
    clear: both;
    margin: 0 auto 1em;
    text-align: center;
    display:none;
}

/*HIDE LINEAGE DROPDOWN*/
#lineageSelectionForm{
    display:none;
}
	
