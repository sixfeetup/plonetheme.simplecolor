/*SIMPLECOLOR THEME STYLES*/
body{
    background-image:url("lightpaperfibers.png");
}

#visual-portal-wrapper{
    margin:5px 15px 0px 15px;
    }

#portal-header{
    width:100%;
    margin:0px;
    padding:0px;
}

#portal-header .hiddenStructure{
    display:none;
}

#portal-top{
    background-image:url(oldMain.jpg);
    background-repeat:no-repeat;
    padding:0;
    margin-bottom:.8em;
    margin-top:4px;
    border:solid #004f00;
    border-width:1px 4px 4px 1px;
    -webkit-border-radius: 10px;
    -moz-border-radius: 10px;
    border-radius: 10px;
    background-color:#F4FCFF;
}

#titlebox{
    float:left;
    width:auto;
    margin-top:0;
    background-image:none;
    }

#psulogo{
    float:left;
    width:90px;
    margin-left:24px;
    padding-top:5px;
}

#cla{
     float:left;
     text-align:center;
     margin-top:10px;
}

#collegeof{
    font-size:.7em;
    
}
#liberalarts{
    font-family:Garamond;
    font-size:1.6em;
    font-weight:600;
    line-height:80%;
}

#headcoursetitle{
	float:left;
    margin-top:8px;
    text-align:center;
    margin-left:2.0em;
    padding-bottom:4px;
}

#headcoursetitle h2{
	color:#004f00;
    font-family:Garamond;
    font-weight:normal;
    line-height:90%;
    font-size:1.6em;
    margin:0;
    border-bottom:none;
}

#headcoursetitle h3{
	color:#004f00;
    font-size:.8em;
}

#portal-searchbox{
    clear:right;
    padding:0px;
    margin-top:4px;
    margin-right:4px;
}

.searchSection{display:none;}

#portal-siteactions{
	clear:none;
	float:right;
	padding-top:4px;
	padding-bottom:0px;
}

#portal-siteactions li a {
    border: none;
    color: #000000;
}

#portal-siteactions li.selected a {
    background-color: #dee7ec;
    color: #436976;
    border: 1px solid #8cacbb;
}

#portal-siteactions li a:hover {
    background-color: transparent;
    color: #000000;
    border: none;
    text-decoration:underline;
}

.portaltype-coursetitle #portal-breadcrumbs{
    display:none;
}

.portaltype-lessontitle #portal-breadcrumbs{
    display:none;
}

#portal-breadcrumbs{
    background-color:#003366;
    -webkit-border-radius: 8px 8px 0px 0px;
    -moz-border-radius: 8px 8px 0px 0px;
    border-radius: 8px 8px 0px 0px;
    padding:4px;
    color:#FFFFFF;
    font-size: 90%;
    margin-bottom: 0;
    margin-left: 0;
    }

#portal-breadcrumbs a {
    color:#FFF;
}

#portal-columns{
   background-color:transparent;   
}

#portal-column-content{
    background-color:#ffffff; 
    width:80%;
    float:right;
    margin:0px 0px 4px 0px;
    padding:0px;
    border:solid #003366;
    border-width:1px 4px 4px 1px;
    -webkit-border-radius: 10px;
    -moz-border-radius: 10px;
    border-radius: 10px;
}

#content{
    padding:0px 20px 0px 20px;
    margin:0;
}

#viewlet-below-content{
	margin:5px;
	}

#courseimagetile{
    height:<dtml-var "_[courseImageTile].height">px;
	background-image:url(&dtml-portal_url;/&dtml-courseImageTile;);
	background-repeat:x-repeat;
    clear: both;
    margin-left: -20px;
    margin-right: -20px;
    margin-top: 0px;
    overflow: hidden;
    -webkit-border-radius: 10px;
    -moz-border-radius: 10px;
    border-radius: 10px;
}

#courseimageleft{
	height:<dtml-var "_[courseImageLeft].height">px;
	width:<dtml-var "_[courseImageLeft].width">px;
	float:left;
	background-image:url(&dtml-portal_url;/&dtml-courseImageLeft;);
	background-repeat:no-repeat;
	}

#courseimageright{
	height:<dtml-var "_[courseImageRight].height">px;
	width:<dtml-var "_[courseImageRight].width">px;
	float:right;
	background-image:url(&dtml-portal_url;/&dtml-courseImageRight;);
	background-repeat:no-repeat;
	}

#portal-column-one {
    float:left;
    width:18%;
    margin:0;
    border:solid #660000;
    border-width:1px 4px 4px 1px;
    -webkit-border-radius: 10px;
    -moz-border-radius: 10px;
    border-radius: 10px;
    background-color:#FFFFFF;
}

/*NAVIGATION PORTLET STYLES*/

.portlet{
    padding-left:.5em;
}

dl.portlet ul.navTreeLevel0 > .navTreeItem {
    /*border-bottom: 0.1em dotted #4573A2;*/
    border-bottom:none;
    line-height: 1em;
    padding: 0.25em 0em;
}

.navTree .navTreeLevel1{
   margin-top:5px;
}

dl.portlet ul.navTreeLevel1 .navTreeItem {
    line-height: 1.3;
}

dl.portlet  a:hover {
    color:#CADAEB !important;
}

dl.portlet ul.navTree .navTreeCurrentItem {
    background-color: #DFD8DA;
    color:#000000;
    padding:2px 0px 2px 4px;
    border-left: none;
    margin-left: 0;
    margin-right: 0;
}

.portletNavigationTree{
    border:none;
    }

.portletNavigationTree .portletHeader{
    background-color:#660000;
    color:#FFFFFF;
    border:none;
    -webkit-border-radius: 8px 8px 0px 0px;
    -moz-border-radius: 8px 8px 0px 0px;
    border-radius: 8px 8px 0px 0px;
    }


dl.portletNavigationTree dd.portletItem{
    padding-left:.5em;
}

.navTreeItem a, dd.portletItem .navTreeItem a{
    border: none;
    color:#631926;
    }

.navTreeItem a:hover, dd.portletItem .navTreeItem a:hover{
    background-color: #DFD8DA; 
    color: #000 !important;
    border:none;
    margin-right:0px;
    }

.portlet{
    padding-left:0;
}

.portletStaticText{
    margin:3px 7px 3px 3px;
    color:#FFFFFF;
    }


/*STYLES FOR PREVIOUS-NEXT DIV*/
.lessonpagelistingBar{
    width:auto;
    float:right;
    border:none;
    background-color:transparent;
    margin:0px 0px .8em .8em;
    padding:0 5px;
    }

.lessonpagelistingBar .listingNext{
    float:right;
    padding:0px 3px;
	}
	
.lessonpagelistingBar .listingPrevious{
    padding:3px 3px;
	}

.lessonpagelistingBar a:link, a:visited{
    border: 0.1em solid #cccccc;
    text-decoration:none;
    -webkit-border-radius: 6px;
    -moz-border-radius: 6px;
    border-radius: 6px;
	}
	
#content .lessonpagelistingBar a:hover{
    color:#000000 !important;
    background-color:#EDEDED;
	}
	
div .listingBar{
    clear:both;
    margin-top:4px;
    padding:4px;
    background-color:transparent;
    border:none;
	}

div.listingBar a:link, a:visited{
    border: 0.1em solid #cccccc;
    display: inline-block;
    padding: 4px;
    -webkit-border-radius: 6px;
    -moz-border-radius: 6px;
    border-radius: 6px;
	}
	
div.listingBar a:hover{
    background-color:#EDEDED;
    color:#000000;
	}
	

.listingBar .previous {
	float:left;
	}
.listingBar .next {
	float:right;
	}

#document-action-printall{
    font-size:.9em;
}

#portal-footer{
	background-color:transparent;
	color:#000;
	margin:0;
	text-align:center;
        line-height:1.5em;
	border-bottom:none;
    border-top:none;
}

#portal-footer a{
    color:#000;
    }

#portal-footer a:visited{
    color:#000;
    }

/*GIVE WHITE BG TO CONTROL PANEL OPTIONS*/
#portlet-prefs{
    background-color:#ffffff;
}


.documentActions li{
    float:right;
}

#document-action-printall{
	padding-bottom:4px;
	}

/*STYLES USED FOR GLOBAL NAVIGATION BAR - MODULE/UNIT OPTION*/
#portal-globalnav {background-color: #ECE6D6;}
#portal-globalnav li a {border:none;color:#000000;}
#portal-globalnav li.selected a {background-color: #867A68;border:none;color:#FFFFFF;border-bottom:none;}
#portal-globalnav li a:hover {background-color: #867A68;color:#FFFFFF;}


