/* keep twitter feed box from flexing*/
.portlet-static-twitter-portlet{
     width:180px;
}

/*STYLES FOR CUSTOM FUNCTIONS*/

.template-coursetitle_view  .documentFirstHeading{
	color:#867A68;
	font-weight:600;
	font-size:180%;
}

/*BLOCK DOCUMENT AUTHOR*/
#content #plone-document-byline{display:none;}

/*SHOW DOCUMENT AUTHOR FOR COMMENTING*/
.comment .documentByLine{display:block;}
.comment .documentAuthor{display:block;}

/*EDITOR'S PORTLET*/
.portlet-editors{border-top:0px;border-left:0px;border-right:2px solid #000;border-bottom:2px solid #000;}
.portletHeader{border:none;}
.portlet-editors{background:#ECE7D4;color:#000;}
.portlet-editors .portletHeader{background:#867A68;color:#FFF;font-weight:bold;font-size:1.2em;}

/*Question/Answer Show/Hide Divs*/
.question{
        background:#F4F4E5;
	padding:6px;
	border:1px solid #331D00;
	margin:5px 0px;
	-moz-border-radius: 5px;
	-webkit-border-radius: 5px;
	}
			
.answer{
	background:#EEF5EC;
	padding:6px;
	border:1px solid #003300;
	margin:5px 0px;
	-moz-border-radius: 5px;
	-webkit-border-radius: 5px;
	}
.showAnswer{
	width:130px;
        cursor:pointer;
        margin-top:3px;
	}
/* SIMPLE SLIDESHOW */
     .slideshow{
       padding:10px;
        border:1px solid #000000;
        background-color:#000000;
        color:#FFF;
	-moz-border-radius: 5px;
	-webkit-border-radius: 5px;
	}
			
     .slideshow a{
	color:#FFF;
	cursor:pointer;
	}
				
     .slideshowheading{
	text-align:left;
	margin:0px;
        color:#FFF;
	}

     .imagelinks{
        margin-bottom:5px;
        }
     .captiondiv{
	position:relative;
	z-index:10;
	margin-top:-1em;
	background-color:#000;
	opacity:.8;
	color:#FFF;
	}
	
#content p, #content table, #content dl, dl.portlet p, dl.portlet {
    margin-bottom: 0;
}


	
